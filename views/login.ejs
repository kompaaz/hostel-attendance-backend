<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Role Routing</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Segoe UI", sans-serif;
        background: linear-gradient(to right, #4facfe, #00f2fe);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .container {
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
      }

      .login-form {
        display: flex;
        flex-direction: column;
      }

      .login-form h2 {
        text-align: center;
        margin-bottom: 24px;
        color: #333;
      }

      .login-form label {
        margin-top: 12px;
        font-weight: bold;
      }

      .login-form input {
        padding: 10px;
        margin-top: 6px;
        border: 1px solid #ccc;
        border-radius: 8px;
        outline: none;
        transition: 0.3s;
      }

      .login-form input:focus {
        border-color: #007bff;
      }

      .login-form button {
        margin-top: 24px;
        padding: 12px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 16px;
      }

      .login-form button:hover {
        background: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <form
        class="login-form"
        method="POST"
        action="http://localhost:5000/api/auth/login"
      >
        <h2>Login</h2>

        <label for="username">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Enter your username"
          required
        />

        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
        />

        <button type="submit">Login</button>
      </form>
    </div>

    <script>
      function handleLogin(event) {
        event.preventDefault();

        const username = document.getElementById("username").value.trim();
        const password = document.getElementById("password").value;

        const users = {
          student1: { password: "1234", redirect: "student_dashboard.html" },
          ad1: { password: "1234", redirect: "ad_attendance" },
          director1: { password: "1234", redirect: "director_dashboard.html" },
          admin1: { password: "1234", redirect: "admin_dashboard.html" },
        };

        if (users[username] && users[username].password === password) {
          window.location.href = users[username].redirect;
        } else {
          alert("Invalid username or password");
        }
      }
    </script>
  </body>
</html>
